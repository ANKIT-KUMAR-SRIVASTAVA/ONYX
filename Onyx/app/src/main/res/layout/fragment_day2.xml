            <TextView
                android:textSize="20sp"
                android:textColor="#0bc0f3"
                android:gravity="center"
                android:id="@+id/des"
                android:background="#000000"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:text="1:00 pm-2:00pm"
