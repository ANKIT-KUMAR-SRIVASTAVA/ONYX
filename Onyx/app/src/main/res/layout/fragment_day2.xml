                android:textSize="30sp"
                android:textColor="#0bc0f3"
                android:gravity="center_horizontal"
                android:background="#000000"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="-2dp"
                android:text="MINDSPARK" />
            <TextView
                android:textSize="20sp"
                android:textColor="#0bc0f3"
                android:gravity="center"
                android:id="@+id/rules"
                android:background="#000000"
                android:padding="10dp"
                android:text="2:00 pm-3:30 pm"
                android:layout_width="match_parent"
                android:layout_height="-2dp" />
            <TextView
                android:textSize="20sp"
                android:textColor="#0bc0f3"
                android:gravity="center"
                android:id="@+id/rules1"
                android:background="#000000"
                android:padding="10dp"
                android:text="SEMINAR HALL"
                android:layout_width="match_parent"
                android:layout_height="-2dp" />

            <View
                android:background="#00ffffff"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:textSize="30sp"
                android:textColor="#0bc0f3"
                android:gravity="center_horizontal"
                android:background="#000000"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="-2dp"
                android:text="CLOSING CEREMONY" />

            <TextView
                android:textSize="20sp"
                android:textColor="#0bc0f3"
                android:gravity="center"
                android:id="@+id/coord"
                android:background="#000000"
                android:padding="10dp"
                android:text="4:00 pm-5:00 pm"
                android:layout_width="match_parent"
                android:layout_height="-2dp" />
            <TextView
                android:textSize="20sp"
                android:textColor="#0bc0f3"
                android:gravity="center"
                android:id="@+id/rules12"
                android:background="#000000"
                android:padding="10dp"
                android:text="AUDITORIUM"
                android:layout_width="match_parent"
                android:layout_height="-2dp" />


            <View
                android:background="#00ffffff"
                android:layout_width="2dp"
                android:layout_height="2dp" />
