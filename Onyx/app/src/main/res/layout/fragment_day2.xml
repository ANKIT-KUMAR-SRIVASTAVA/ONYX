                android:textColor="#0bc0f3"
                android:gravity="center"
                android:background="#00000000"
                android:padding="10dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="-2dp" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
